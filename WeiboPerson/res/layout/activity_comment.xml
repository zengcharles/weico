        <ImageView
            android:id="@+id/imgBarAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/compose_mentionbutton_background_selector" />

        <ImageView
            android:id="@+id/imgBarSharp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/compose_trendbutton_background_selector" />

        <ImageView
            android:id="@+id/imgBarEmo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/compose_emoticonbutton_background_selector" />

        <ImageView
            android:id="@+id/imgBarAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/compose_message_add_background_selector" />
    </LinearLayout>

