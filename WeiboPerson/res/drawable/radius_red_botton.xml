<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_focused="true" android:state_enabled="true" android:state_pressed="false">
        <shape>
            <corners
		        android:bottomLeftRadius="0.5dp"
		        android:bottomRightRadius="0.5dp"
		        android:topLeftRadius="0.5dp"
		        android:topRightRadius="0.5dp" />

    		<solid android:color="#b8412b" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <corners
		        android:bottomLeftRadius="0.5dp"
		        android:bottomRightRadius="0.5dp"
		        android:topLeftRadius="0.5dp"
		        android:topRightRadius="0.5dp" />

    		<solid android:color="#f75f43" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_checked="true">
        <shape>
            <corners
		        android:bottomLeftRadius="0.5dp"
		        android:bottomRightRadius="0.5dp"
		        android:topLeftRadius="0.5dp"
		        android:topRightRadius="0.5dp" />

    		<solid android:color="#f75f43" />
        </shape>
    </item>
    <item>
         <shape>
            <corners
		        android:bottomLeftRadius="7dp"
		        android:bottomRightRadius="7dp"
		        android:topLeftRadius="7dp"
		        android:topRightRadius="7dp" />

    		<solid android:color="#b8412b" />
        </shape>
    </item>

</selector>
